<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.upc.subgrupprop113.supermarketmanager.LogInController">
    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <HBox prefHeight="0.0" prefWidth="200.0">
            <children>
                  <Button onAction="#handleLogin" text="Log In" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="errorLabel" style="-fx-background-color: yellow; -fx-padding: 5;" textFill="black" visible="false" />
            </children>
         </HBox>
        </VBox>
    </center>
    <top>
        <HBox prefHeight="60.0" prefWidth="240.0" BorderPane.alignment="CENTER">
            <children>
                <Label style="-fx-font-size: 24; -fx-text-fill: black;" text="Log In" />
                <Region HBox.hgrow="ALWAYS" /> <!-- Esto actÃºa como un spacer flexible -->
                <Button onAction="#handlePowerOff">
                    <graphic>
                        <ImageView fx:id="powerOffImage" fitHeight="30" fitWidth="30">
                            <image>
                                <Image url="@spritesGUI/power-off.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </top>

</BorderPane>
