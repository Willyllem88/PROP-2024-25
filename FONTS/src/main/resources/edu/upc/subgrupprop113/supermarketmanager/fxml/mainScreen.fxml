<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.upc.subgrupprop113.supermarketmanager.controllers.MainScreenController">

    <top>
        <fx:include source="components/topBar.fxml" fx:id="topBar"/>
    </top>

    <!-- El contenedor central es un HBox para las estanterÃ­as -->
    <center>
        <HBox fx:id="shelvingUnitContainer" style="-fx-padding: 20; -fx-spacing: 50; -fx-alignment: center" VBox.vgrow="ALWAYS">
        </HBox>
    </center>

    <!-- Botones pegados a los lados izquierdo y derecho de la pantalla, centrados verticalmente y con padding -->
    <left>
        <VBox style="-fx-alignment: center; -fx-padding: 20;">
            <Button text="Izquierda" style="-fx-pref-width: 100; -fx-pref-height: 40;"/>
        </VBox>
    </left>

    <right>
        <VBox style="-fx-alignment: center; -fx-padding: 20;">
            <Button text="Derecha" style="-fx-pref-width: 100; -fx-pref-height: 40;"/>
        </VBox>
    </right>

</BorderPane>
